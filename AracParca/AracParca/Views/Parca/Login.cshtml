@model User

<div style="width: 30rem; margin:auto;" class="shadow p-5">
    @if (TempData["LoginMsg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["LoginMsg"]
        </div>
    }

    <form method="post" asp-action="Index" style="width: 20rem; margin:auto;">
        <div style="width: 20rem; margin:auto;">
            <div class="row pb-2">
                <h2 class="text-primary text-center"><b>Giriş Yap</b></h2>
                <hr />
            </div>
            <div class="row pb-2">
                <label asp-for="EMail" class="col-form-label text-center">E-posta</label>
                <div class="col-sm-10" style="margin:auto;">
                    <input type="email" asp-for="EMail" class="form-control" />
                    <span asp-validation-for="EMail" class="text-danger"></span>
                </div>
            </div>

            <div class="row pb-2">
                <label asp-for="Password" class="col-form-label text-center">Şifre</label>
                <div class="col-sm-10" style="margin:auto;">
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="row pb-2">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary form-control">Giriş Yap</button>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <a asp-action="Register" class="btn btn-secondary form-control">
                        Kayıt Sayfasına Geri Dön
                    </a>
                </div>
            </div>
        </div>
    </form>
</div>
