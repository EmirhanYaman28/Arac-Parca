@model User

<div style="width: 50rem; margin:auto;">

    @if (TempData["RegisterMsg"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["RegisterMsg"]
        </div>
    }

    <form method="post" asp-action="UserRegister">
        <div style="width: 25rem; margin:auto;" class="container shadow p-3">
            <div class="row pb-2">
                <h2 class="text-primary text-center"><b>Kayıt Ol</b></h2>
                <hr />
            </div>

            <div class="row pb-2">
                <label for="UserName" class="col-form-label text-center">Kullanıcı Adı</label>
                <div class="col-sm-10" style="margin:auto;">
                    <input type="text" asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>

            <div class="row pb-2">
                <label for="EMail" class="col-form-label text-center">E-posta</label>
                <div class="col-sm-10" style="margin:auto;">
                    <input type="email" asp-for="EMail" class="form-control" />
                    <span asp-validation-for="EMail" class="text-danger"></span>
                </div>
            </div>

            <div class="row pb-2">
                <label for="Password" class="col-form-label text-center">Şifre</label>
                <div class="col-sm-10" style="margin:auto;">
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row pb-2">
                <label for="ConfirmPassword" class="col-form-label text-center">Yeniden Şifre</label>
                <div class="col-sm-10" style="margin:auto;">
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="row pb-2">
                <div class="col-sm-12">
                    <button type="submit" class="btn btn-primary form-control">Kayıt Ol</button>
                </div>
            </div>

            <div class="row pb-2">
                <div class="col-sm-12">
                    <a asp-action="Login" class="btn btn-secondary form-control">Giriş Yapın</a>
                </div>
            </div>
        </div>
    </form>
</div>
